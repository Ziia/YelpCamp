<div class="container">
  <div class="row">
    <h1 class="new">Add New Comment to <%= campground.name %></h1>

    <div class="smallCenter">

      <form action="/campgrounds/<%= campground._id %>/comments" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text">
          </div>
          <button class="btn btn-default btn-lg btn-block">Submit!</button>
      </form>

      <a href="/campgrounds">Back</a>
    </div>

  </div>
</div>
