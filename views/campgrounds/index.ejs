<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <header class="jumbotron">
        <h1>Welcome To LetsBet!</h1>
        <p>View our hand-picked Bets from all over the world.</p>
        <p>
          <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Post</a>
        </p>
      </header>
    </div>
  </div>

  <div class="row gridfix text-center">
      <% campgrounds.forEach(function(campground) { %>
        <div class="col-md-8 col-sm-12">
          <div class="thumbnail">
            <img src="<%= campground.image %>">
            <div class="caption">
            <h4><%= campground.name %></h4>
            </div>
            <p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
        <% }); %>
    <div class="col-md-4">
      <div class="sidebar">
        <p>CONTENT</p>
        <p>CONTENT</p>
        <p>CONTENT</p>
        <p>CONTENT</p>
        <p>CONTENT</p>
        <p>CONTENT</p>
        <p>CONTENT</p>
      </div>
    </div>
  </div>
</div>

